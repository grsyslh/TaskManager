@model TaskManager.Entity.Tasks

@{
    ViewData["Title"] = "Detaylar";
}

    <h1 class="text-center">Görev Detayları</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Başlık
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Header)
        </dd>
        <dt class = "col-sm-2">
            İçerik
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
        <dt class = "col-sm-2">
            Tarih
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskDate)
        </dd>
    </dl>
</div>
<hr /> 
<div class="mt-2">
    <a asp-action="Edit" asp-route-id="@Model.TasksId" class="btn btn-primary">Güncelle</a> |
    <a asp-action="Index" class="btn btn-outline-primary">Tüm Görevlere Geri Dön</a>
</div>
