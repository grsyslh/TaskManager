@model TaskManager.Entity.Tasks

@{
    ViewData["Title"] = "Görev Sil";
}

<h1 style="color:red;" class="text-center">Görevi Silmek İstediğinizden Emin Misiniz?</h1>

<h3></h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Başlık
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Header)
        </dd>
        <dt class="col-sm-2">
            İçerik
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
        <dt class="col-sm-2">
            Tarih
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskDate)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="TasksId" />
        <button type="submit"class="btn btn-danger"><i class="fas fa-trash"></i> Görevi Sil</button> |
        <a asp-action="Index" class="btn btn-outline-primary">Tüm Görevlere Geri Dön</a>
    </form>
</div>
